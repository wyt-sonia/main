<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1" id="cardPane" fx:id="cardPane"
      xmlns="http://javafx.com/javafx/10.0.2-internal">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5"/>
            </padding>
            <HBox alignment="CENTER_LEFT" prefWidth="305.0" spacing="5">
                <Label fx:id="id" styleClass="index_lbl">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE"/>
                    </minWidth>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
                <Label fx:id="taskName" minWidth="-Infinity" styleClass="index_lbl" text="\$first"/>
                <FlowPane fx:id="tags" alignment="CENTER_LEFT" rowValignment="TOP" translateY="2.0">
                    <children>
                        <Label fx:id="type" styleClass="cell_small_label" text="\$type">
                            <FlowPane.margin>
                                <Insets left="5.0" right="5.0"/>
                            </FlowPane.margin>
                        </Label>
                        <Label fx:id="timeLeft" styleClass="due_soon_status" text="\$timeLeft">
                            <FlowPane.margin>
                                <Insets left="5.0" right="5.0"/>
                            </FlowPane.margin>
                        </Label>
                    </children>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </FlowPane>
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </HBox>
            <Label fx:id="dateTime" styleClass="cell_small_label" text="\$dateTime"/>
            <Label fx:id="creationDateTime" styleClass="cell_small_label" text="\$creationDateTime"/>
        </VBox>
        <HBox prefHeight="100.0" prefWidth="200.0"/>
        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
</HBox>
